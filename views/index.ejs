<!DOCTYPE html>
<html>
<head>
  <title>Budget App - Index</title>
  <link rel="stylesheet" href="/normalize.css">
  <link rel="stylesheet" href="/skeleton.css">
</head>
<body>
    <div class="container">
        <h1>Budgtr</h1>
        <a href="/budgets/new">Add New Budget</a>
    <table>
      <thead>
        <tr>
          <th>Date</th>
          <th>Name</th>
          <th>Amount</th>
        </tr>
      </thead>
      <tbody>
        <% Budget.forEach((budgetItem, index) => { %>
          <tr>
            <td><%= budgetItem.date %></td>
            <td><a href="/budget/<%= index %>"><%= budgetItem.name %></a></td>
            <td><%= budgetItem.amount %></td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  </div>
</body>
</html>